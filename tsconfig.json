{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "lib": ["ES2018"],
      "strict": true,
      "outDir": "./dist",
      "esModuleInterop": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "typeRoots": ["node_modules/@types"],
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@functions/*": ["src/functions/*"],
        "@utils/*": ["src/utils/*"],
        "@types/*": ["src/types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }